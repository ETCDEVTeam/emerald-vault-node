{
  "name": "@emeraldpay/emerald-vault-node",
  "version": "0.1.0-0.26.0",
  "description": "Emerald Vault as NodeJS library",
  "main": "lib/index.js",
  "author": "Igor Artamonov <splix@emeraldpay.io>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emeraldpay/emerald-vault-node.git"
  },
  "files": [
    "native/index.node",
    "lib"
  ],
  "binary": {
    "module_name": "index",
    "host": "https://github.com/emeraldpay/emerald-vault-node/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  },
  "scripts": {
    "build:rs": "neon build --release",
    "build:ts": "tsc",
    "build": "npm run clean && npm run build:rs && npm run build:ts",
    "jest": "jest",
    "test": "npm run clean:test && npm run unpack:all && jest",
    "clean:test": "rimraf testdata/tmp-*",
    "clean": "rimraf lib && npm run clean:test",
    "unpack:0.26-basic": "rimraf testdata/vault-0.26-basic && unzip testdata/vault-0.26-basic.zip -d testdata",
    "unpack:0.26-book": "rimraf testdata/vault-0.26-book && unzip testdata/vault-0.26-book.zip -d testdata",
    "unpack:all": "npm run unpack:0.26-basic && npm run unpack:0.26-book",

    "install": "node-pre-gyp install --fallback-to-build=false || neon build --release",
    "package": "node-pre-gyp package",
    "upload-binary": "node-pre-gyp package && node-pre-gyp-github publish"
  },
  "dependencies": {
    "neon-cli": "^0.2.0",
    "node-pre-gyp": "amilajack/node-pre-gyp#neon-compat",
    "node-pre-gyp-github": "^1.4.3"
  },
  "devDependencies": {
    "typescript": "3.4.2",
    "@types/node": "12.0.0",
    "rimraf": "^2.6.3",
    "jest": "24.8.0",
    "@types/jest": "24.0.13",
    "ts-jest": "24.0.2",
    "jest-serial-runner": "1.1.0"
  }
}
